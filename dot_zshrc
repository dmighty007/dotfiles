#$HOME/.local/bin/colorscript -r
function solarbook(){
	com1="ssh"
	com2=-L"$1":localhost:"$1" solaris -t ssh -L"$1":localhost:"$1" "$2"
	$com1 "$com2"
}

function gluonbook(){
	com1="ssh"
	com2=-L"$1":localhost:"$1" gluon -t ssh -L"$1":localhost:"$1" "$2"
	$com1 "$com2"
}

function baryonbook(){
	com1="ssh"
	com2=-L"$1":localhost:"$1" baryon -t ssh -L"$1":localhost:"$1" "$2"
	$com1 "$com2"
}
function texcomplie(){
  pdflatex $1.tex && bibtex $1.aux && pdflatex $1.tex && pdflatex $1.tex
}
